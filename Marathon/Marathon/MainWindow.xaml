<Window x:Class="Marathon2021.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Marathon2021"
        mc:Ignorable="d"
        Title="Marathon Skills 2021" Height="710" Width="896" Loaded="Window_Loaded" MinHeight="600" MinWidth="750">


    <Viewbox Stretch="Uniform">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="620"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Frame x:Name="MainFrame" Source="Pages/MainPage.xaml" Height="620" Width="896" NavigationUIVisibility="Hidden" Grid.Row="0"/>
            <Rectangle VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Fill="#505050" Height="61" Margin="0,0,0,5" Grid.Row="1"/>

            <TextBlock Grid.Row="1" Text="{Binding Time, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 0 10" Foreground="White" FontFamily="Arial" FontSize="18"/>
        </Grid>
    </Viewbox>
    


</Window>
